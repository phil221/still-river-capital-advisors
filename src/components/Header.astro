---
const { navColor = 'white', position } = Astro.props;

---
<header class={`${position ?? 'absolute'} top-0 left-0 right-0 z-20`}>
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class=`text-2xl font-bold text-${navColor}`>
        Still River Capital Advisors
      </a>
      <div class="flex space-x-4">
        <div class="relative">
          <a href="/about" class={`text-${navColor} after:bg-${navColor} after:absolute after:h-[1.5px] after:w-0 after:bottom-0 after:left-0 hover:after:w-full after:transition-all after:duration-200`}>
            About
          </a>
        </div>
        <div class="relative">
          <a href="/contact" class={`text-${navColor} after:bg-${navColor} after:absolute after:h-[1.5px] after:w-0 after:bottom-0 after:left-0 hover:after:w-full after:transition-all after:duration-200`}>
            Contact
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

